        <td><%= modulo.numero_modulo %>.- <%= modulo.nombre %></td>
        <td style="text-align:center;"><%= modulo.horas %></td>
        <td></td>
        <td style="text-align:center;"><%= modulo.periodo %></td>
        <td style="text-align:center;"><%= User.find(modulo.instructor_id).nombre_paterno_materno %></td>
