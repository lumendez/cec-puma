    <center>
      <h3 style="text-transform: uppercase;">Coordinación General de Formación e Innovación Educativa</h3>
      <h5>ACTA INTEGRAL DE EVALUACIÓN DE DIPLOMADOS PARA EL PERSONAL DEL IPN</h5>
    </center>
    <table class="tabla-datos-diplomado" style="text-transform: uppercase;">
      <tr>
        <td colspan="3"><strong>Dependencia Politécnica Responsable:</strong> <%= @grupos_diplomado.diplomado.dependencia %></td>
        <td><strong>Modalidad</strong></td>
        <td><strong>Total de horas</strong></td>
      </tr>
      <tr>
        <td colspan="3"><strong>Nombre del diplomado:</strong> <%= @grupos_diplomado.diplomado.nombre %></td>
        <td><strong><%= @grupos_diplomado.modalidad %></strong></td>
        <td><strong><%= @grupos_diplomado.duracion %></strong> Horas</td>
      </tr>
      <tr>
        <td colspan="3"><strong>Sede:</strong> <%= @grupos_diplomado.diplomado.sede %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td colspan="3"><strong>CUR:</strong> <%= @grupos_diplomado.diplomado.registro %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><strong>Fecha de inicio del diplomado:</strong> <%= @grupos_diplomado.inicio %></td>
        <td><strong>Fecha de término:</strong> <%= @grupos_diplomado.termino %></td>
        <td><strong>Horario:</strong> <%= @grupos_diplomado.horario %></td>
        <td></td>
        <td></td>
      </tr>
    </table>
    &nbsp;
    <table class="tabla-modulos">
      <tr>
        <td rowspan="2">Folio</td>
        <td rowspan="2">Número de empleado</td>
        <td rowspan="2">Tipo de participante</td>
        <td rowspan="2">Nombre del participante</td>
        <td rowspan="2">Dependencia de adscripción</td>
        <% @modulos.count.times do |numero_modulo| %>
        <td colspan="2">Módulo <%= numero_modulo + 1 %></td>
        <% end %>
        <td rowspan="2">Calificacion final</td>
        <td rowspan="2">Acredito/ No acredito</td>
      </tr>
      <tr>
        <% @modulos.count.times do |numero_modulo| %>
        <td>Asist.</td>
        <td>Calif.</td>
        <% end %>
      </tr>
      <% @alumnos.each_with_index do |alumno,index| %>
      <tr>
        <td>0<%= index + 1 %> - 01</td>
        <td><%= alumno.numero_empleado %></td>
        <td><%= alumno.tipo_participante %></td>
        <td><%= alumno.nombre_paterno_materno %></td>
        <td><%= alumno.adscripcion %></td>
        <% @calificaciones.each do |calificacion| %>
          <% if calificacion.inscripcion_diplomado_id == alumno.id %>
            <td><%= calificacion.asistencia %>%</td>
            <td><%= calificacion.calificacion %></td>
          <% end %>
        <% end %>
        <td><%= CalificacionModulo.promedio(alumno.id) %></td>
        <% if CalificacionModulo.promedio(alumno.id) >= 80 %>
        <td>Acreditó</td>
        <% else %>
        <td>No acreditó</td>
        <% end %>
      </tr>
    <% end %>
    </table>
    &nbsp;
