<h2 class="sub">Seleccionar credenciales para crear</h2>
<%= form_tag(credenciales_media_unitarios_path, method: :post) do %>
<div class="row">
  <div class="col-md-4">
      <%= label_tag 'Elija el curso' %>
      <%= select_tag :curso, options_for_select(GruposUnitario.seleccion_curso_nombre), class: 'form-control' %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-2">
      <%= label_tag 'Elija el aÃ±o' %>
      <%= select_tag :anio, options_for_select([["2017","2017"],["2018","2018"],["2019","2019"],["2020","2020"]]), class: 'form-control' %>
      <br>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
      <table class="table table-bordered table-hover">
        <thead>
            <th></th>
            <th>Apellido paterno</th>
            <th>Apellido materno</th>
            <th>Nombre</th>
          </tr>
        </thead>

        <tbody>
            <% @unitarios.each do |unitario| %>
                <tr>
                  <td><%= check_box_tag "unitario_ids[]", unitario.id %></td>
                  <td><%= unitario.paterno %></td>
                  <td><%= unitario.materno %></td>
                  <td><%= unitario.nombre %></td>
                </tr>
            <% end %>
        </tbody>
      </table>
      <input type="checkbox" id="selectAll" value="selectAll"><strong> Seleccionar / Deseleccionar todos</strong><br><br>
      <script>
      $('#selectAll').click(function() {
         if (this.checked) {
             $(':checkbox').each(function() {
                 this.checked = true;
             });
         } else {
            $(':checkbox').each(function() {
                 this.checked = false;
             });
         }
      });
      </script>
      <%= submit_tag 'Enviar', name: nil, class:'btn btn-md btn-primary' %>
  </div>
</div>
<% end %>
<br>
