<div id="grupos">
<h2 class="sub">Asignar calificaciones</h2>
<%= form_tag actualizar_asignar_calificaciones_unitarios_path, method: :patch do %>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th width="5%">N&uacute;mero de lista</th>
      <th>Apellido paterno</th>
      <th>Apellido materno</th>
      <th>Nombre</th>
      <th>Calificaci&oacute;n final</th>
    </tr>
  </thead>

  <tbody>
      <% @unitarios.each_with_index do |unitario, index| %>
          <%= fields_for "unitarios[]", unitario do |f| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= unitario.paterno %></td>
              <td><%= unitario.materno %></td>
              <td><%= unitario.nombre %></td>
              <td width="5%"><%= f.text_field :examen_final, value: unitario.examen_final, class:'form-control' %></td>
            </tr>
          <% end %>
      <% end %>
  </tbody>
</table>
<%= submit_tag "Guardar calificaciones", class: 'btn btn-primary' %>
<br>
<br>
<% end %>
</div>

<%= link_to 'Regresar', grupos_unitarios_path %>
