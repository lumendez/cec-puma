<h2 class="sub">Mis solicitudes de inscripci&oacute;n a Inglés</h2>
<% if @inscripcion_registros.blank? %>
  <p>Usted no tiene ning&uacute;n registro de inscripci&oacute;n</p>
<% else %>
  <% @inscripcion_registros.each do |inscripcion_registro| %>
    <table class="table table-bordered">
      <thead>
        <th>Movimiento bancario</th>
        <th>Documentos validados</th>
        <th>Grupo</th>
        <th>Periodo</th>
        <th>A&ntilde;o</th>
        <% if inscripcion_registro.examen_medio.blank? || inscripcion_registro.examen_final.blank? %>
        <th colspan="2">Opciones</th>
        <% else %>
        <th>Calificación final</td>
        <% end %>
      </thead>
      <tr>
        <% if inscripcion_registro.imagen.exists? %>
          <td>
            <%= link_to inscripcion_registro.imagen.url(:medium), target: '_blank', class:'btn btn-comprobante' do %>
              <span class="glyphicon glyphicon-paperclip"></span> Comprobante
            <% end %>
          </td>
        <% else %>
          <td>
            <strong>Sin comprobante</strong>
          </td>
        <% end %>
        <% if inscripcion_registro.documentos_validados == true %>
          <td class="success"><%= inscripcion_registro.documentos_validados ? 'Si' : 'No' %></td>
        <% else %>
          <td class="danger"><%= inscripcion_registro.documentos_validados ? 'Si' : 'No' %></td>
        <% end %>
        <td class="info"><%= inscripcion_registro.grupo.nombre %></td>
        <td><%= inscripcion_registro.grupo.periodo %></td>
        <td align="center"><%= inscripcion_registro.grupo.anio %></td>
        <% if inscripcion_registro.examen_medio.blank? || inscripcion_registro.examen_final.blank? %>
          <td><%= link_to 'Talón', inscripcion_registro %></td>
          <td><%= link_to 'Editar', edit_inscripcion_registro_path(inscripcion_registro) %></td>
        <% else %>
          <td align="center"><%= inscripcion_registro.promedio %></td>
        <% end %>
      </tr>
    </table>
  <% end %>
<% end %>

