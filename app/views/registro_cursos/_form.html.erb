<%= form_for(registro_curso) do |f| %>
  <% if registro_curso.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(registro_curso.errors.count, "error") %> prohibited this registro_curso from being saved:</h2>

      <ul>
      <% registro_curso.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="form-group col-sm-4">
    <%= f.label :nombre, "Nombre del curso" %>
    <%= f.text_field :nombre, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-sm-4">
    <%= f.label :horas, "Duración en horas (total)" %>
    <%= f.text_field :horas, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-sm-4">
    <%= f.label :periodo, "Periodo de impartición" %>
    <%= f.text_field :periodo, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-sm-4">
    <%= f.label :temas %>
    <%= f.text_field :temas, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-sm-4">
    <%= f.label :instructor %>
    <%= f.text_field :instructor, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="actions col-sm-4">
    <%= f.submit "Enviar", class: "btn btn-md btn-primary" %>
  </div>
</div>
<% end %>
