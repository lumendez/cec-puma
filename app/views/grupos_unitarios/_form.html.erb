<%= form_for(grupos_unitario) do |f| %>
  <% if grupos_unitario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(grupos_unitario.errors.count, "error") %> prohibited this grupos_unitario from being saved:</h2>

      <ul>
      <% grupos_unitario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row  jumbotron">
  <h4 class="subs"><strong>Informaci&oacute;n general del grupo</strong></h4>
  <div class="form-group col-sm-3">
    <%= f.label :nombre, 'Nombre del curso' %>
    <%= collection_select(:grupos_unitario, :nombre, RegistroCurso.all, :nombre, :nombre, {prompt: 'Seleccione'}, class: 'form-control') %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :horario %>
    <%= f.text_field :horario, class:'form-control' %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :estado %>
    <%= collection_select(:grupos_unitario, :estado, Estado.all, :nombre, :nombre, {prompt: 'Seleccione'}, class: 'form-control') %>
  </div>

  <div class="form-group col-sm-2">
    <%= f.label :anio, 'Año' %><br>
    <div class="input-group date">
      <%= f.text_field :anio, class:'anio form-control' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :periodo %>
    <%= f.text_field :periodo, class:'form-control' %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :habilitar_constancias_grupo %>
    <%= f.check_box :habilitar_constancias_grupo, class:'form-control' %>
  </div>
</div>
<div class="row  jumbotron">
  <h4 class="subs"><strong>Informaci&oacute;n de la oferta educativa</strong></h4>
  <div class="form-group col-sm-3">
    <%= f.label :lugar %>
    <%= collection_select(:grupos_unitario, :lugar, Centro.all, :lugar, :lugar, {prompt: 'Seleccione'}, class: 'form-control') %>
  </div>

  <div class="form-group col-sm-2">
    <%= f.label :fecha, 'Fecha' %><br>
    <div class="input-group date">
      <%= f.text_field :fecha, class:'fecha form-control' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :centro %>
    <%= collection_select(:grupos_unitario, :centro, Centro.all, :nombre, :nombre, {prompt: 'Seleccione'}, class: 'form-control') %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :registro %>
    <%= f.text_field :registro, class:'form-control' %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :tipo %>
    <%= f.text_field :tipo, class:'form-control' %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :modalidad %>
    <%= f.text_field :modalidad, class:'form-control' %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :cupo %>
    <%= f.text_field :cupo, class:'form-control' %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :duracion %>
    <%= f.text_field :duracion, class:'form-control' %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :cuota %>
    <%= f.text_field :cuota, class:'form-control' %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :clave, 'Clave del catálogo fideicomiso' %>
    <%= f.text_field :clave, class:'form-control' %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :proyecto %>
    <%= f.text_field :proyecto, class:'form-control' %>
  </div>
</div>
<div class="row  jumbotron">
  <h4 class="subs"><strong>Informaci&oacute;n bancaria</strong></h4>
  <div class="form-group col-sm-3">
    <%= f.label :institucion_bancaria %>
    <%= collection_select(:grupos_unitario, :institucion_bancaria, DatosBanco.all, :nombre, :nombre, {prompt: 'Seleccione'}, class: 'form-control')  %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :cuenta %>
    <%= collection_select(:grupos_unitario, :cuenta, DatosBanco.all, :cuenta, :cuenta, {prompt: 'Seleccione'}, class: 'form-control')  %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :titular %>
    <%= collection_select(:grupos_unitario, :titular, DatosBanco.all, :titular, :titular, {prompt: 'Seleccione'}, class: 'form-control')  %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.label :referencia %>
    <%= collection_select(:grupos_unitario, :referencia, DatosBanco.all, :referencia, :referencia, {prompt: 'Seleccione'}, class: 'form-control')  %>
  </div>
</div>
<div class="row  jumbotron">
  <h4 class="subs"><strong>Validaci&oacute;n</strong></h4>
  <div class="form-group col-sm-3">
    <%= f.label :jefe_ec, 'Jefe de Educación Continua' %>
    <%= f.text_field :jefe_ec, value: grupos_unitario.jefe_educacion_continua, class: 'form-control'  %>
  </div>
</div>
<div class="row">
  <div class="actions col-sm-4">
    <%= f.submit 'Enviar', class:'btn btn-primary' %>
  </div>
</div>
<% end %>
<script type="text/javascript">
  $(document).ready(function(){
    $('.anio').datepicker({language: 'es', format: 'yyyy', minViewMode: 'years'});
    $('.fecha').datepicker({language: 'es', format: 'dd-mm-yyyy', todayHighlight: true});
  });
</script>
