<h1 class="sub">Change your password</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

<div class="row">
  <div class="col-md-5">
    <%= f.label :password, "Nueva contraseña" %><br />
    <% if @minimum_password_length %>
      <em>Por lo menos (<%= @minimum_password_length %> caracteres)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
</div>
<div class="row">
  <div class="actions col-sm-1">
    <%= f.submit "Cambiar contraseña" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
