<div id="filterrific_results">
  <table class="table table-bordered table-condensed table-small-font">
    <thead>
      <tr>
        <th>N&uacute;m prog.</th>
        <th>A. Paterno</th>
        <th>A. Materno</th>
        <th>Nombre(s)</th>
        <th>Nivel</th>
        <th>Horario</th>
        <th>Idioma</th>
        <th>Cantidad depositada</th>
        <th>Movimiento bancario</th>
        <th>Comunidad</th>
        <th>Curso</th>
        <th>A&ntilde;o</th>
      </tr>
    </thead>

    <tbody>
      <% @inscripcion_registros.each_with_index do |inscripcion_registro, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= inscripcion_registro.paterno_upcase %></td>
          <td><%= inscripcion_registro.materno_upcase %></td>
          <td><%= inscripcion_registro.nombre_upcase %></td>
          <td><%= inscripcion_registro.nivel.mb_chars.upcase %></td>
          <td><%= inscripcion_registro.horario %></td>
          <td><%= inscripcion_registro.idioma.mb_chars.upcase %></td>
          <td>$<%= inscripcion_registro.monto_pagado %></td>
          <td><%= inscripcion_registro.movimiento %></td>
          <td><%= inscripcion_registro.procedencia.mb_chars.upcase %></td>
          <td><%= inscripcion_registro.curso.upcase %></td>
          <td><%= inscripcion_registro.created_at.strftime("%Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @inscripcion_registros, theme: 'twitter-bootstrap-3', param_name: :pagina %>
</div>
