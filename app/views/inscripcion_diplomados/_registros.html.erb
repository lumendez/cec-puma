<div id="filterrific_results">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Documentos validados</th>
        <th>Fecha de creación</th>
        <th>Diplomado</th>
        <th>Grupo de diplomado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @inscripcion_diplomados.each do |inscripcion_diplomado| %>
        <tr>
          <td><%= inscripcion_diplomado.paterno_materno_nombre %></td>
          <% if inscripcion_diplomado.documentos_validados == true %>
            <td class="success"><%= inscripcion_diplomado.documentos_validados ? 'Si' : 'No' %></td>
          <% else %>
            <td class="danger"><%= inscripcion_diplomado.documentos_validados ? 'Si' : 'No' %></td>
          <% end %>
          <td><%= inscripcion_diplomado.creado %></td>
          <td><%= inscripcion_diplomado.grupos_diplomado.diplomado.nombre %></td>
          <td><%= inscripcion_diplomado.grupos_diplomado.nombre %></td>
          <td><%= link_to 'Mostrar', inscripcion_diplomado %></td>
          <td><%= link_to 'Editar', edit_inscripcion_diplomado_path(inscripcion_diplomado) %></td>
          <td><%= link_to 'Eliminar', inscripcion_diplomado, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @inscripcion_diplomados, theme: 'twitter-bootstrap-3', param_name: :pagina %>
</div>
