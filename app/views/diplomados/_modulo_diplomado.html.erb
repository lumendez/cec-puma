  <div class="row">
    <div class="form-group col-md-2">
      <%= f.label :numero_modulo, "Número del módulo" %>
      <%= f.text_field :numero_modulo, class:'form-control' %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :nombre, "Nombre del módulo" %>
      <%= f.text_field :nombre, class:'form-control' %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :horas, "Horas del módulo" %>
      <%= f.text_field :horas, class:'form-control' %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :periodo, "Periodo del módulo" %>
      <%= f.text_field :periodo, class:'form-control' %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :instructor, "Instructor del módulo" %>
      <%= f.collection_select(:instructor_id, User.instructores_diplomados.order("paterno ASC"),
      :id, :nombre_completo, {prompt: 'Seleccione'}, class: 'form-control', required: true) %>
    </div>
    <div class="form-group col-md-12">
      <%= f.input_field :_destroy, as: :hidden %>
      <strong><%= link_to '- Eliminar módulo', '#', class: 'remove_record' %></strong>
    </div>
  </div>
