  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :nombre, "Nombre del módulo" %>
      <%= f.text_field :nombre, class:'form-control' %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :horas, "Horas del módulo" %>
      <%= f.text_field :horas, class:'form-control' %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :periodo, "Periodo del módulo" %>
      <%= f.text_field :periodo, class:'form-control' %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :instructor, "Instructor del módulo" %>
      <%= f.text_field :instructor, class:'form-control' %>
    </div>
    <div class="form-group col-md-12">
      <%= f.input_field :_destroy, as: :hidden %>
      <strong><%= link_to '- Eliminar módulo', '#', class: 'remove_record' %></strong>
    </div>
  </div>
